   <choice correct="yes">
      <statement> 
       <program language="java">
          <input>
public class SWord {
	public static boolean startsWithS(String str) {
		return !str.isEmpty() &amp;&amp; str.charAt(0) == 'S';
	}
}	
		</input>
        </program>
      </statement>
      <feedback>
        <p>
           You did it correctly!
